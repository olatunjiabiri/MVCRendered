@model CatViewModel

<h1>Create New Cats</h1>
<hr />

<div class="row">
    <div class="col-6">

        <div class="card">
            <div class="card-header">
                <h5>Create a New Cat!</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Hello" asp-action="CreateCat" method="post">
                    <div class="mb-3">
                        <label class="form-label">Cat name</label>
                        <input asp-for=Name type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Cat Age</label>
                        <input asp-for=Age type="number" class="form-control" />
                    </div>
                    
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
            <div class="card-footer">
            </div>
        </div>

    </div>
</div>